<% if already_liked?(post, current_user) %>
    <%= form_tag post_like_path(post, return_like(post, current_user)), class: "like_form", method: :delete do %>
         <%= submit_tag "Unlike" %>
    <% end %>
<% else %>
    <%= form_tag post_likes_path(post), class: "like_form" do %>
        <%= hidden_field_tag :'like[user_id]', current_user.id %>
        <%= hidden_field_tag :'like[post_id]', post.id %>
         <%= submit_tag "Like" %>
    <% end %>
<% end %>
