<%= render 'header', group: @group %>
<%= form_tag group_posts_path do %>
    
  <%= render "devise/shared/error_messages", resource: @post %>

    <%= hidden_field_tag :'post[user_id]', current_user.id %> 
    <%= hidden_field_tag :'post[group_id]', current_group.id %> 

    <div class="field<%= ' field_with_errors' if @post.errors[:title].any? %>">
        <label>Post Title: </label>
        <%= text_field_tag :'post[title]' %>
        <br>
    </div>

    <div class="field<%= ' field_with_errors' if @post.errors[:content].any? %>">
        <label>Post Content: </label>
        <%= text_field_tag :'post[content]' %>
        <br>
    </div>
    <%= submit_tag "Create Post" %>
<% end %>

