<% if already_followed?(current_user, followed_user) %>
    <%= form_tag user_follow_path(current_user, return_follow(current_user, followed_user)), method: :delete, class: "fllw_bttn" do %>
        <%= submit_tag "Unfollow" %>
    <% end %>
<% else %>
    <%= form_tag user_follows_path(current_user), class: "fllw_bttn" do %>
        <%= hidden_field_tag :'follow[follower_id]', current_user.id %>
        <%= hidden_field_tag :'follow[followed_user_id]', followed_user.id %>

        <%= submit_tag "Follow" %>
    <% end %>
<% end %>
