
<% unless sub.confirmed == true %>
    <%= link_to sub.group.name, group_path(sub.group_id) %> 
    <br>
    Moderator: <%= link_to sub.group.mod.username, user_path(sub.group.mod) %>
    <br>
    <%= button_to 'Click Here to Join', group_subscription_path(sub.group_id, sub), method: :patch, query: 'accept' %>
    <br>
    OR:
    <br>
    <%= button_to 'Click Here to Decline Invite', group_subscription_path(sub.group_id, sub), method: :delete %>
    <br>
<% end %>
