
<%= render partial: 'posts/post_details', locals: { post: @post } %>

<%= form_tag post_comments_path do %>
    
  <%= render "devise/shared/error_messages", resource: @comment %>

    <%= hidden_field_tag :'comment[user_id]', current_user.id %> 
    <%= hidden_field_tag :'comment[post_id]', @post.id %> 

    <br>
    <div class="field<%= ' field_with_errors' if @comment.errors[:content].any? %>">
        <label> Comment Content: </label>
        <%= text_area_tag :'comment[content]' %>
        <br>
    </div>
    

    <%= submit_tag "Add Comment" %>
<% end %>

